#:kivy 2.0.0
MainAnchorLayout:
<Button>
    font_size: 16
    size_hint: .1,.1



<MainAnchorLayout>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "bottom"
    FloatLayout:
        size: root.width, root.height
        Button:
            # {"x","y","top", "bottom", "left"}
            pos_hint: {"x":.35, "y":.1}
            background_color: 0,0,0,0
            Image:
                source: 'archive/icon/backward_btn.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            pos_hint: {"x":.45, "y":.1}
            background_color: 0,0,0,0
            Image:
                source: 'archive/icon/start-stop_btn.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                
        Button:
            text: "forward"
            pos_hint: {"x":.55, "y":.1}

        Slider:
            min: 0
            max: 100
            step: 1
            value:100
            orientation:"horizontal"  
            size_hint: .4,.1
            pos_hint: {"x":.30, "y":.005}   
    
