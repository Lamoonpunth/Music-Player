#:kivy 2.0.0
#:import Factory kivy.factory.Factory
<SongBrowser>:
    id: sb
    canvas:
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            size:self.size
            pos:self.pos
    orientation: 'vertical'
    size: root.width,root.height
    padding: 50
    spacing: 20

    # Image:
    #     id: my_image
    #     source: ""

    FileChooserListView:
        id:lv
        on_selection: sb.selected(lv.selection)

<AddSong>:
    id:addsong
    MDIconButton:
        icon: 'plus-circle'
        text: "ALERT DIALOG"
        pos_hint: {'center_x': .5, 'center_y': .5}
        on_release: root.show_songbrowser()
