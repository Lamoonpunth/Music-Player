#:kivy 2.0.0
#:import images_path kivymd.images_path
#:import Factory kivy.factory.Factory

<MainGridLayout>
    size: '1024dp','768dp'
    play:play
    slide_volume:slide_volume
    prev:prev
    next:next
    shuffle:shuffle
    repeat:repeat
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos

    # ส่วนของโปรแกรมทั้งหมด(กล่องใหญ่สุด)
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height

        # spacing: 20

        # ส่วนของ Playlist และ Song name
        BoxLayout:
            size: root.width,3*root.height/4
            orientation: 'horizontal'

            # ช่อง Playlist
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None,None)
                size:self.parent.width*0.2,self.parent.height
                canvas.before:
                    Color:
                        rgba: (0,0,0,.9)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation:'vertical'
                    size_hint:(None,None)
                    size: self.parent.width,self.parent.height*0.15
                    Label:
                        text:''
                        size_hint: 1,0.07

                    MDBoxLayout:
                        adaptive_height: True
                        Label:
                            text: ''
                            size_hint:(.1,1)
                        MDTextField:
                            id: search_song
                            icon_right: 'magnify'
                            icon_right_color: 1,1,1,1
                            hint_text: 'Search Song'
                            font_name: 'sf'
                            color_mode: 'custom'
                            helper_text_mode: "on_focus"
                            line_color_normal: 1,.41,.69,1
                            line_color_focus: 1,.41,.69,1
                            current_hint_text_color: 1,1,1,1
                            on_text: root.Searched_Song(self.text, True)  #รับข้อมูล
                        
                        Label:
                            text: ''
                            size_hint:(.1,1)
                            
                            

                    Label:
                        text: ''
                        size_hint:(1,0.05)  
                BoxLayout:
                    id:boxbox
                    orientation:'vertical'
                    size_hint:(None,None)
                    size: self.parent.width,self.parent.height*0.85

                    ScrollView:
                        size:self.parent.width,self.parent.height
                        do_scroll_x:False
                        do_scroll_y:True
                        bar_width:10
                        #  playlist
                        GridLayout:
                            id:playlistslide
                            cols:1
                            index:0
                            spacing:10
                            padding:10
                            size_hint: (None,None)
                            size:self.parent.width,self.parent.height
                            height:self.minimum_height
                            width:self.minimum_width
                    #====================== needed class ==============================# เขียนให้แล้วนะไอ้หน้าหี      
                    AddPlaylistButton:
                        text: 'AddPlaylist'
                        theme_text_color: "Custom"
                        font_name: 'sf'
                        text_color: (1,1,1,1)
                        size_hint: 1,.1
                        on_release: Factory.MyPopup().open()
                             

                        

                          
            #=========== เส้นแบ่ง ==============#                 
            BoxLayout:
                size_hint: (None,None)
                size:self.parent.width*0.001,self.parent.height
                canvas.before:
                    Color:
                        rgba: (0,0,0,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            #=========== เส้นแบ่ง ==============#              
            
              
            # ช่องของ Song list
            BoxLayout:
                orientation: 'vertical'
                # ชื่อ Playlist
                BoxLayout:
                    id: playlist_name_box
                    orientation:'horizontal'
                    size_hint: (None,None)
                    size:self.parent.width,self.parent.height*0.15
                    canvas.before:
                        Color:
                            rgba: (0,0,0,.85)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        id:playlist_name
                        text:'Playlist Name'
                        color: 1 , 1 , 1 , 1
                        font_size: 42
                        font_name: 'sf'

                    


                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (None,None)
                    size:self.parent.width,self.parent.height*0.05
                    canvas.before:
                        Color:
                            rgba: (0,0,0,.85)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Refresh:
                        on_release: root.refresh()
                        size_hint: (None,None)
                        size:self.parent.width*0.2,self.parent.height

                    Label:
                        text: ''

                    BoxLayout:
                        id:change_position1
                        orientation: 'horizontal'
                        padding: (self.parent.width*0.5,-27)

                    #Label:
                    #    text: ''   
                    
                    BoxLayout:
                        id:change_position2
                        orientation: 'horizontal'
                        padding: (self.parent.width*0.125,-27)


                #=========== เส้นแบ่ง ==============#  
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (None,None)
                    size:self.parent.width,self.parent.height*0.002
                    canvas.before:
                        Color:
                            rgba: (0,0,0,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                #=========== เส้นแบ่ง ==============#  






                # รายละเอียดเพลงใน Playlist
                BoxLayout:
                    orientation:'horizontal'
                    padding:25
                    size_hint: (None,None)
                    size:self.parent.width,self.parent.height*0.1
                    canvas.before:
                        Color:
                            rgba: (0,0,0,.7)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text:'         No.'
                        size_hint:(0.07,None)
                        size:self.parent.width*0.1,self.parent.height
                        text_size:self.width,self.height
                        halign:'left'
                        color: 1 , 1 , 1 , 1
                        font_name: 'sf'
                        font_size:16
                    Label:
                        text:'  Song'
                        size_hint:(0.6,None)
                        size:self.parent.width*0.7,self.parent.height
                        text_size:self.width,self.height
                        halign:'left'
                        color: 1 , 1 , 1 , 1
                        font_name: 'sf'
                        font_size:16
                    Label:
                        text:'Time'
                        # size:self.parent.width*0.1,self.parent.height
                        size_hint:(0.3,None)
                        size:self.parent.width*0.2,self.parent.height
                        text_size:self.width,self.height
                        halign:'center'
                        color: 1 , 1 , 1 , 1
                        font_name: 'sf'
                        font_size:16
                BoxLayout:
                    orientation:'vertical'
                    size_hint: (None,None)
                    size: self.parent.width,self.parent.height*0.7
                    canvas.before:
                        Color:
                            rgba: (0,0,0,.7)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    ScrollView:
                        id: sc
                        do_scroll_x: False
                        do_scroll_y: True
                        size: self.parent.width*2,self.parent.height
                        bar_width: 15
                        SlideNorn:
                            id:sn
                            cols: 1
                            padding: 10
                            spacing: 10
                            size_hint: None, None
                            index: 0
                            width: self.minimum_width
                            height: self.minimum_height
                            size: self.parent.width,self.parent.height
        #กล่องใส่ UI
        BoxLayout:
            size_hint: (1,0.2)
            orientation: 'horizontal'
            size: root.width,root.height/4
            #canvas.before:
            #    Color:
            #        rgba: (0,0,0,.9)
            #    Rectangle:
            #        pos: self.pos
            #        size: self.size

            BoxLayout:
                size_hint: 0.33, 1
                canvas.before:
                    Color:
                        rgba: (0,0,0,.9)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                # song name
                Label:
                    id:song_name
                    text:'Song name'
                    color:1,1,1,1
                    font_name: 'sf'
                    font_size:20
            # ปุ่มข้างล่าง
            BoxLayout:
                size_hint: 0.37, 1
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: (0,0,0,.9)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                #========== ปุ่ม shuffle previous play next repeat ==============#
                MDBoxLayout:
                    adaptive_height: True
                    pos_hint: {"center_x":0.5,"center_y":0.5}

                    Label:
                        text: ''
                        size_hint: 0.7,1

                    ShuffleButton:
                        id: shuffle
                        state:'normal'
                        icon: 'shuffle-variant'
                        user_font_size: 35
                        theme_text_color: "Custom"
                        pos_hint: {"center_x":0.5,"center_y":0.5}
                        text_color: [0.6,0.6,0.6,1]
                        ripple_scale: 0
                        on_state: root.shuffleState

                    NextPrevButton:
                        id: prev
                        icon: 'skip-previous'
                        user_font_size: 65
                        theme_text_color: "Custom"
                        pos_hint: {"center_x":0.5,"center_y":0.5}
                        text_color: [0.6,0.6,0.6,1]
                        ripple_scale: 0

                    PlayButton:
                        id: play
                        icon: 'play-circle'
                        user_font_size: 80
                        theme_text_color: "Custom"
                        pos_hint: {"center_x":0.5,"center_y":0.5}
                        text_color: [0.6,0.6,0.6,1]
                        ripple_scale: 0
                        on_release: self.user_font_size = 85

                    NextPrevButton:
                        id: next
                        icon: 'skip-next'
                        user_font_size: 65
                        theme_text_color: "Custom"
                        pos_hint: {"center_x":0.5,"center_y":0.5}
                        text_color: [0.6,0.6,0.6,1]
                        ripple_scale: 0

                    RepeatButton:
                        id: repeat
                        repeatstate: "False"
                        icon: 'repeat'
                        user_font_size: 35
                        theme_text_color: "Custom"
                        pos_hint: {"center_x":0.5,"center_y":0.5}
                        text_color: [0.6,0.6,0.6,1]
                        ripple_scale: 0

                    Label:
                        text: ''
                Slider:
                    id: playtime
                    min: 0
                    max: 10000
                    step: 1
                    value: 0
                    orientation:"horizontal"
                    on_value: root.valuechange(*args)
                    on_touch_up: root.seek(*args)
                    on_touch_down: if self.collide_point(*args[1].pos):root.notupdate(*args)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.30, 1
                canvas.before:
                    Color:
                        rgba: (0,0,0,.9)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                QueueButton:
                    id: queue_list
                    icon: 'playlist-edit'
                    user_font_size: 35
                    theme_text_color: "Custom"
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    text_color: [0.6,0.6,0.6,1]
                    ripple_scale: 0
                    queueshownow: False
                    on_touch_up: if self.collide_point(*args[1].pos):root.showqueue("touch")
                Slider:
                    id: slide_volume
                    min: 0
                    max: 100
                    step: 1
                    value: 25
                    orientation:"horizontal"
                    on_value: root.slide_it(*args)
    #user_font_size: 40
<MyPopup@Popup>
    title: 'Enter your playlist name'
    auto_dismiss: True
    size_hint: .6 ,.2
    pos_hint: {"x": .2 ,"top": .7}
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: myTextInput
            font_size: 24
            multiline: False  
        Button:
            text: "Enter"
            font_size: 20
            size_hint: .2 , 1
            pos_hint: {"center_x": .5}
            on_release: Factory.MainGridLayout().EnterPlaylistName(myTextInput.text)
            on_release: root.dismiss()

<Refresh>:
    id: iButton
    icon: 'refresh'
    pos_hint: {'center_x': .5, 'center_y': .5}
    padding: 20
    theme_text_color: "Custom"
    text_color: 1,1,1,1