#:kivy 2.0.0
<MainGridLayout>
    submit:submit
    slide_volume:slide_volume
    prev:prev
    next:next
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos
    # ส่วนของโปรแกรมทั้งหมด(กล่องใหญ่สุด)
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height
        # spacing: 20

        # ส่วนของ Playlist และ Song name
        BoxLayout:
            size: root.width,3*root.height/4
            orientation: 'horizontal'
            # ช่อง Playlist
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.3,1)
                TextInput:
                    size_hint:(1,0.2)
                Button:
                    pos_hint: {"center_x" : 0.5}            
                    text:'Playlist'   
                
            # ช่องของ Song list
            BoxLayout:
                orientation: 'vertical'
                # ชื่อ Playlist
                BoxLayout:
                    orientation:'horizontal' 
                    size_hint: 1,0.2
                    Label:
                        text:'Playlist Name'
                        color: 0 , 0 , 0 , 1
                        font_size: 36
                        font_name: 'archive/SF-UI-Display-Regular.ttf'
                    BoxLayout:
                        orientation:'vertical'
                # รายละเอียดเพลงใน Playlist
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: 1,0.1
                    Label:
                        text:'Song'
                        color: 0 , 0 , 0 , 1
                        font_name: 'archive/SF-UI-Display-Regular.ttf'
                    Label:
                        text:''
                    Label:
                        text:'Time'
                        color: 0 , 0 , 0 , 1
                        font_name: 'archive/SF-UI-Display-Regular.ttf'
                BoxLayout:
                    orientation:'vertical'
                    size_hint: 1,0.7
                    color: 0 , 0 , 0 , 1
                    
        # กล่องใส่ UI เลื่อน/เล่น/หยุดเพลง และ เพิ่ม/ลดเสียง
        BoxLayout:
            size_hint: (1,0.2)
            orientation: 'horizontal'
            size: root.width,root.height/4 
            BoxLayout:
                Label:
                    id:song_name
                    text:'Song name'
                    color:0,0,0,1
                    font_name: 'archive/SF-UI-Display-Regular.ttf'
            BoxLayout:
                size_hint: (1.5,1)
                orientation: 'vertical'
                BoxLayout:
                    orientation:'horizontal'
                    size: self.parent.width/2,self.parent.height
                    center_x:self.parent.center_x  
                    Button:
                        id:shuffle
                        text:''
                        # background_color: 0,0,0,0
                        Image:
                            source: 'archive/icon/shuffle.png'
                            pos: self.parent.center_x - (self.parent.width/2),self.parent.center_y - (self.parent.height/2)
                            size: self.parent.width,self.parent.height
                    Button:
                        id:prev
                        text:''
                        # background_color: 0,0,0,0
                        Image:
                            source: 'archive/icon/backward_btn.png'
                            pos: self.parent.center_x - (self.parent.width/2),self.parent.center_y - (self.parent.height/2)
                            size: self.parent.width,self.parent.height
                    Button:
                        id:submit
                        text: ' '
                        # background_color: 0,0,0,0
                        Image:
                            source: 'archive/icon/start-stop_btn.png'
                            pos: self.parent.center_x - (self.parent.width/2),self.parent.center_y - (self.parent.height/2)
                            size: self.parent.width,self.parent.height
                    Button:
                        id:next
                        text:''
                        # background_color: 0,0,0,0
                        Image:
                            source: 'archive/icon/forward_btn.png'
                            pos: self.parent.center_x - (self.parent.width/2),self.parent.center_y - (self.parent.height/2)
                            size: self.parent.width,self.parent.height
                    Button:
                        id:repeat
                        text:''
                        # background_color: 0,0,0,0
                        Image:
                            source: 'archive/icon/repeat.png'
                            pos: self.parent.center_x - (self.parent.width/2),self.parent.center_y - (self.parent.height/2)
                            size: self.parent.width,self.parent.height
                Slider:
                    id: playtime
                    min: 0
                    max: 10000
                    step: 1
                    value: 0
                    orientation:"horizontal"            
                    on_value: root.seek(*args)
            Slider:
                id: slide_volume
                min: 0
                max: 100
                step: 1
                value: 25
                orientation:"horizontal"            
                on_value: root.slide_it(*args)
