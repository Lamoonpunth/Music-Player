#:kivy 2.0.0
<MainGridLayout>
    submit:submit
    prev:prev
    next:next
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height
        # spacing: 20

        BoxLayout:
            size: root.width,3*root.height/4
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.3,1)
                Button:
                    pos_hint: {"center_x" : 0.5}            
                    text:'Playlist'   
                TextInput:
                    size_hint:(1,0.2)
         
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text:'Song List'                  
        BoxLayout:
            size_hint: (1,0.2)
            orientation: 'vertical'
            size: root.width,root.height/4
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    Label:
                        id:song_name
                        text:'Song name'
                    BoxLayout:
                        size_hint: (1.5,1)
                        orientation: 'vertical'
                        BoxLayout:
                            orientation:'horizontal'
                            Button:
                                id:prev
                                text:'Previous'
                            Button:
                                id:submit
                                text: 'Start/Stop'
                            Button:
                                id:next
                                text:'Next'
                        Slider:
                            id: playtime
                            min: 0
                            max: 10000
                            step: 1
                            value: 0
                            orientation:"horizontal"            
                            on_value: root.seek(*args)
                    Slider:
                        min: 0
                        max: 100
                        step: 1
                        value:100
                        orientation:"horizontal"            
                        on_value: root.slide_it(*args)
